<div class="container">
	<h1>Editing Book</h1>
	<!-- form_for部分 -->
	<%= form_for(@book) do |b| %>
	    <h3>Title</h3>
	    <%= b.text_field :title %>
	    <h3>Opinion</h3>
	    <%= b.text_area :body %>
	    <br><br>
