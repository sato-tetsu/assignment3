      <div>
        <h1>New book</h1>
        <%= form_for(book) do |f| %>

          
          <p>Title</p>
          <%= f.text_field :title, class:"margin-area" %>


          <p>Opinion</p>
          <%= f.text_area :body, class:"margin-area" %>

          <br>
          <%= f.submit "Create Book", class: "btn btn-primary" %>
          
        <% end %>
      </div>
