<h1>Books#show</h1>

<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<h2><%= @book.title %></h2>
<ul class="">
  <li>
     By<a href="#">
     <%= @book.user.name %></a>
  </li>
  <li>
    <%= @book.created_at.strftime('%Y/%m/%d') %>
  </li>
  <li>
    <% if @book.user == current_user %>
      <%= link_to "削除", book_path(@book), method: :delete %>
    <% end %>
  </li>

</ul>
<div class="">
    <p><%= @book.body %></p>
</div>

