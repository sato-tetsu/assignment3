<h1>User info</h1>
<!-- ユーザ表示 -->
	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

	<table class="table table-striped">
		<tr>
			<td>name</td>
			<td>
				<%= user.name %>
			</td>
		</tr>
		<tr>
			<td>introduction</td>
			<td>
			<%= user.introduction %>
			</td>
		</tr>
	</table>

	<%= link_to edit_user_path(user), class: "btn btn-default" do %>
		<span class="glyphicon glyphicon-cog" aria-hidden="true" style="width: 150px"></span>
	<% end %>
