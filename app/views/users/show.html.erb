<h1>Users#show</h1>

  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3><%= @user.introduction %></h3>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

  <% @books.each do |book| %>
    <%= link_to book_path(book.id) do %>
       <%= book.title %>
    <% end %>

    <h5><%= book.title %></h5>    <!-- 内容が表示されない？！ -->
    <h5><%= book.body %></h5>

    <ul>
      <li>Editer is
        <%= book.user.name %>
      </li>
    </ul>
    <br>

    <div class="">
        <%= link_to book_path(book.id) do %>
            <h6>詳細</h6>
        <% end %>
    </div>
  <% end %>

