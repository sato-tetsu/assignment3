<% if flash[:notice] %>
	<h6><%= flash[:notice] %></h6>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<!-- User info -->
			<%= render 'users/info', user: @user %>
			<!-- New Book -->
			<%= render 'books/new', book: @book %>
		</div>
		<div class="col-xs-9">
	  		<!-- リスト表示 -->
			<%= render 'books/list', books: @books %>
		</div>
	</div>
</div>

<%= paginate @books %>