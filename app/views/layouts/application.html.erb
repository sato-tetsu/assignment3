<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

        <!-- ここから -->
      <div class="header-container">
        <ul>
          <% if user_signed_in? %>
            <li>
              <%= link_to 'Home', user_path(current_user.id) %>
            </li>
            <li>
              <%= link_to 'Users', user_path(current_user.id) %>
            </li>
            <li>
              <%= link_to 'Books', user_path(current_user.id) %>
            </li>
            <li>
              <%= link_to "logput", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Home', user_path(current_user.id) %>
            </li>
            <li>
              <%= link_to 'About', "##" %>
            </li>
            <li>
              <%= link_to "sign up", new_user_registration_path %>
            </li>
            <li>
              <%= link_to "login", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>

    <!-- ここまで -->

    
    <%= yield %>
  </body>
</html>
